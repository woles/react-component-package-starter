{
  "compilerOptions": {
    "target": "es5",                        
    "module": "commonjs",                   
    "lib": ["es6"],                             
    "jsx": "react",                   
    "declaration": true,                   
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "removeComments": true,               
    "strict": true,                          
    "noImplicitAny": true,              
    "strictNullChecks": true,
    "esModuleInterop": true      
  },
  "exclude": [
    "**/*.test.ts",
    "dist",
    "example"
  ]
}
